<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_half"
    android:layout_marginRight="@dimen/padding_half"
    android:layout_marginTop="@dimen/padding_half"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_half">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/padding_half">

            <TextView
                android:id="@+id/reg_mem_id"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Membership ID"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/typography_body"
                android:background="@drawable/rounded_background"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_marginEnd="@dimen/padding_half"/>

            <TextView
                android:id="@+id/reg_name"
                tools:text="Member Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/typography_subheading"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright"
            android:layout_marginBottom="@dimen/padding_half"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_weight="0"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_id"
                android:tint="@color/colorAccent"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_marginEnd="@dimen/padding_half"/>

            <TextView
                android:id="@+id/reg_no"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Registration Number"
                android:textSize="@dimen/typography_body"/>

            <ImageView
                android:layout_weight="0"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_contact"
                android:tint="@color/colorAccent"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_marginEnd="@dimen/padding_half"/>

            <TextView
                android:id="@+id/reg_contact_number"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Contact Number"
                android:textSize="@dimen/typography_body"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/padding_half">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:layout_marginRight="@dimen/padding_half"
                android:tint="@color/colorAccent"
                android:layout_marginEnd="@dimen/padding_half"/>

            <TextView
                android:id="@+id/reg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Email"
                android:textSize="@dimen/typography_body"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright"
            android:layout_marginBottom="@dimen/padding_half"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_time"
                android:alpha="0.54"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_marginEnd="@dimen/padding_half"/>

            <TextView
                android:id="@+id/register_time_stamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Time"
                android:textSize="@dimen/typography_body"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>